{
  "title": "FrontmostIfEvernote1",
  "rules": [
    {
      "description": "RightCommand + Spacebar_ゴミ箱に移動(Evernote)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "right_gui"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "9",
              "modifiers": [
                "left_control",
                "right_alt"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.evernote.Evernote$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "LeftOption + M_ノートの移動先を検索(Evernote)",
